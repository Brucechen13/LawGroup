<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/layout_marginRight" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:orientation="vertical" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@mipmap/line" />

                <RelativeLayout
                    android:id="@+id/tou_rl"
                    android:layout_width="fill_parent"
                    android:layout_height="80dip"
                    android:background="@null"
                    android:clickable="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tou_text"
                        style="@style/text_black_18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@mipmap/ic_profile_nickname_normal"
                        android:drawablePadding="4dp"
                        android:duplicateParentState="true"
                        android:gravity="center_vertical"
                        android:text="@string/user_pic" />

                    <ImageView
                        android:id="@+id/detail_img"
                        android:layout_width="60.0dip"
                        android:layout_height="60.0dip"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/tou_img"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/tou_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:scaleType="matrix"
                        android:src="@drawable/mm_submenu" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="60dip"
                    android:background="@mipmap/line" />

                <RelativeLayout
                    android:id="@+id/nick_rl"
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:background="@null"
                    android:clickable="true"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/mtv_011"
                        style="@style/text_black_18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@mipmap/ic_profile_nickname_normal"
                        android:drawablePadding="4dp"
                        android:duplicateParentState="true"
                        android:gravity="center_vertical"
                        android:text="@string/user_name" />

                    <TextView
                        android:id="@+id/nick_name"
                        style="@style/text_18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="28dip"
                        android:layout_toRightOf="@id/mtv_011" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:scaleType="matrix"
                        android:src="@drawable/mm_submenu" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="60dip"
                    android:background="@mipmap/line" />

                <RelativeLayout
                    android:id="@+id/signature_rl"
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:background="@null"
                    android:clickable="true"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/mtv_01"
                        style="@style/text_black_18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@mipmap/ic_profile_nickname_normal"
                        android:drawablePadding="4dp"
                        android:duplicateParentState="true"
                        android:text="@string/user_sign" />

                    <TextView
                        android:id="@+id/signature_tv"
                        style="@style/text_18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="28dip"
                        android:layout_toRightOf="@id/mtv_01" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:scaleType="matrix"
                        android:src="@drawable/mm_submenu" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="60dip"
                    android:background="@mipmap/line" />

                <RelativeLayout
                    android:id="@+id/score_rl"
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:background="@null"
                    android:clickable="true"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/scoreText"
                        style="@style/text_black_18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@mipmap/ic_profile_nickname_normal"
                        android:drawablePadding="4dp"
                        android:duplicateParentState="true"
                        android:text="@string/user_score" />

                    <TextView
                        android:id="@+id/score_tv"
                        style="@style/text_18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="28dip"
                        android:layout_toRightOf="@id/scoreText" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:scaleType="matrix"
                        android:src="@drawable/mm_submenu" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@mipmap/line" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:background="@null"
                android:orientation="vertical" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@mipmap/line" />


                <RelativeLayout
                    android:id="@+id/msg_rl"
                    android:layout_width="fill_parent"
                    android:layout_height="42dip"
                    android:clickable="true" >

                    <ImageView
                        android:id="@+id/mime__shangchuan_img"
                        android:layout_width="36.0dip"
                        android:layout_height="36.0dip"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:background="@mipmap/ic_mine_feed"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/shangchuan_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:layout_toRightOf="@id/mime__shangchuan_img"
                        android:text="@string/user_setting"
                        android:textColor="#202020"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/row_shangchuan_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:scaleType="matrix"
                        android:src="@drawable/mm_submenu" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="60dip"
                    android:background="@mipmap/line" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>