<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Black.NoTitleBar">
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!--标题栏-->
    <style name="Text">
        <item name="android:textStyle">normal</item>
    </style>
    <style name="Text.Title" parent="@style/Text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Text.Title_Button" parent="@style/Text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_backward_selector</item>
    </style>

    <style name="Button_Tab">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text_service_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_black_18">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="text_18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_userItem">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#202020</item>
    </style>

    <style name="layout_setting">
        <item name="android:background">@color/table_background</item>
    </style>

    <style name="text_content">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_item_color</item>
    </style>

    <style name="text_comment">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_item_color</item>
    </style>

    <!--法律item -->
    <style name="text_law">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_item_color</item>
    </style>

    <!-- 案例item -->
    <style name="text_sample_title">
        <item name="android:textSize">18dip</item>
        <item name="android:textColor">@color/text_item_color</item>
    </style>

    <style name="text_sample">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">@color/gray</item>
    </style>



</resources>
